{
  "name": "theodors.ch",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.11.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck",
    "format": "prettier --write .",
    "analyze": "BUNDLE_ANALYZE=true next build",
    "perf:ci": "npm run build && lhci autorun --config=./lighthouserc.json",
    "qa": "npm run check && npm run perf:ci",
    "prepare": "husky install"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.5.4",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-visually-hidden": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "katex": "^0.16.11",
    "lucide-react": "^0.462.0",
    "negotiator": "^0.6.4",
    "next": "14.2.7",
    "next-intl": "^3.23.2",
    "next-themes": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/katex": "^0.16.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/negotiator": "^0.6.4",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "14.2.7",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "@lhci/cli": "^0.14.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "next lint --fix --file"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
